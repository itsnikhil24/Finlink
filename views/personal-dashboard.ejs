<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Dashboard with Finance Growth Analyzer</title>
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #000426, #00BFFF);
            color: #333;
            height: 100vh;
        }

        /* Navigation Bar */
        .navbar {
            background-color: #0f0f0f;
            padding: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar h1 {
            color: white;
            font-size: 1.8rem;
            font-weight: bold;
        }

        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            margin-left: 20px;
            font-size: 1rem;
        }

        .navbar .nav-links a:hover {
            text-decoration: underline;
        }

        /* Dashboard Container */
        .dashboard-container {
            display: flex;
            justify-content: space-between;
            padding: 2rem;
            gap: 2rem;
        }

        /* Left Section (Profile Info) */
        .dashboard-left {
            width: 30%;
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .dashboard-left img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            margin-bottom: 1.5rem;
            border: 4px solid #4CAF50;
            object-fit: cover;
        }

        .dashboard-left h2 {
            font-size: 1.7rem;
            margin-bottom: 1rem;
            color: #333;
        }

        .dashboard-left p {
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            color: #777;
        }

        .dashboard-left .btn {
            padding: 1rem 2rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .dashboard-left .btn:hover {
            background-color: #45a049;
        }

        /* Right Section (Financial Goals & Status) */
        .dashboard-right {
            width: 65%;
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
        }

        .dashboard-right h3 {
            font-size: 1.6rem;
            color: #333;
            margin-bottom: 1rem;
        }

        .input-group {
            margin-bottom: 1.8rem;
        }

        .input-group label {
            font-size: 1.1rem;
            color: #555;
            margin-bottom: 0.5rem;
            display: block;
        }

        .input-group input,
        .input-group textarea {
            width: 100%;
            padding: 1rem;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 8px;
            background-color: #f9f9f9;
            box-sizing: border-box;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .input-group input:focus,
        .input-group textarea:focus {
            background-color: #fff;
            border-color: #4CAF50;
        }

        /* Finance Growth Analyzer Section */
        .analyzer-section {
            margin-top: 2rem;
            padding: 2rem;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .analyzer-section h3 {
            margin-bottom: 2rem;
            font-size: 1.8rem;
            color: #333;
            font-weight: bold;
        }

        .analyzer-section .input-group {
            margin-bottom: 1.8rem;
        }

        .analyzer-section .btn {
            padding: 1rem 2rem;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1.2rem;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s ease;
        }

        .analyzer-section .btn:hover {
            background-color: #45a049;
        }

        .result {
            font-size: 1.2rem;
            color: #333;
            font-weight: bold;
            margin-top: 1rem;
            display: none;
        }

        /* Progress Bar */
        .progress-container {
            margin-top: 2rem;
            width: 100%;
            background-color: #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
        }

        .progress-bar {
            height: 20px;
            background-color: #4CAF50;
            width: 0;
            transition: width 1s ease;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <div class="navbar">
        <h1>FinLink</h1>
        <div class="nav-links">
            <a href="/home">Home</a>
            <a href="/logout">Logout</a>
         
        </div>
    </div>

    <!-- Dashboard Content -->
    <div class="dashboard-container">

        <!-- Left Section (Profile Info) -->
        <div class="dashboard-left">
            <img src="../images/pexels-olly-943084.jpg" alt="Profile Picture">
            <h2>Nikhil Sharma</h2>
            <p><strong>Occupation:</strong> Software Developer</p>
            <p><strong>Email:</strong> nikhil.sharma@example.com</p>
            <p><strong>Phone:</strong> 9876543210</p>
            <p><strong>Location:</strong> Chandigarh, India</p>
            <p><strong>Company:</strong> XYZ Tech Solutions</p>
            <button class="btn">Edit Profile</button>
        </div>

        <!-- Right Section (Financial Goals & Status) -->
        <div class="dashboard-right">
            <h3>Financial Profile</h3>

            <!-- Financial Goals -->
            <div class="input-group">
                <label for="goals">ðŸŽ¯ Financial Goals</label>
                <textarea id="goals" placeholder="Enter your financial goals">Save for a home, Invest in stocks, Build retirement fund</textarea>
            </div>

            <!-- Current Status -->
            <div class="input-group">
                <label for="status">ðŸ“Š Current Status</label>
                <textarea id="status" placeholder="Describe your current financial status">Currently saving 20% of monthly income for future goals.</textarea>
            </div>

            <button class="btn">Save Changes</button>
        </div>

    </div>

    <!-- Finance Growth Analyzer Section -->
    <div class="analyzer-section">
        <h3>AI Finance Growth Analyzer</h3>
        
        <!-- Income -->
        <div class="input-group">
            <label for="income">ðŸ’° Monthly Income</label>
            <input type="number" id="income" placeholder="Enter your monthly income" required>
        </div>

        <!-- Expenses -->
        <div class="input-group">
            <label for="expenses">ðŸ’¸ Monthly Expenses</label>
            <input type="number" id="expenses" placeholder="Enter your monthly expenses" required>
        </div>

        <!-- Savings Percentage -->
        <div class="input-group">
            <label for="savings">ðŸ’¼ Savings Percentage</label>
            <input type="number" id="savings" placeholder="Enter your savings percentage (0-100)" required>
        </div>

        <!-- Investment -->
        <div class="input-group">
            <label for="investment">ðŸ“ˆ Investment Amount</label>
            <input type="number" id="investment" placeholder="Enter your monthly investment" required>
        </div>

        <!-- Submit Button -->
        <button class="btn" onclick="calculateGrowth()">Analyze Growth</button>

        <!-- Result & Progress Bar -->
        <div class="result" id="growthResult"></div>
        <div class="progress-container">
            <div class="progress-bar" id="progressBar"></div>
        </div>
    </div>

    <!-- JavaScript Logic -->
    <script>
        function calculateGrowth() {
            const income = parseFloat(document.getElementById('income').value);
            const expenses = parseFloat(document.getElementById('expenses').value);
            const savingsPercentage = parseFloat(document.getElementById('savings').value);
            const investment = parseFloat(document.getElementById('investment').value);

            if (!income || !expenses || !savingsPercentage || !investment) {
                alert("Please fill out all fields correctly.");
                return;
            }

            const savingsAmount = (income * savingsPercentage) / 100;
            const totalInvestment = savingsAmount + investment;
            const progress = Math.min(totalInvestment / income * 100, 100);
            
            // Display the results
            const resultText = `Based on your inputs, your total monthly savings and investment will be â‚¹${totalInvestment.toFixed(2)}.`;
            document.getElementById('growthResult').innerText = resultText;
            document.getElementById('growthResult').style.display = 'block';
            
            // Animate the progress bar
            const progressBar = document.getElementById('progressBar');
            progressBar.style.width = `${progress}%`;
        }
    </script>
</body>
</html>
